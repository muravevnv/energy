section.reviews.section   
  .container 
    +section-heading('Ваше мнение о нас', 'Все отзывы')
    .reviews__slider(data-slider="reviews")
      .swiper-wrapper 
        for item in reviews
          .swiper-slide 
            .reviews-card
              .reviews-card__top
                .reviews-card__main
                  .reviews-card__author= item.author
                  .reviews-card__rating 
                    .reviews-card__stars
                      .reviews-card__star.is-highlighted 
                        +svg(20, 20, 'star')
                      .reviews-card__star.is-highlighted 
                        +svg(20, 20, 'star')
