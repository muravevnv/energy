section.service.section-top 
  .service__bg  
    img(src="./img/decor/mountains.svg", alt="")
  .container 
    .service__wrapper
      .service__hero 
        picture.service__hero-img 
          img(src="./img/service/service-10.png", alt="Спортивная школа скалолазания")
        .service__hero-info 
          h1.service__hero-title.h1 Спортивная школа скалолазания
          .service__hero-panel 
            button.service__hero-btn.btn.btn_l.btn_gradient
              span Записаться!
            .service__hero-details 
              .service__hero-detail 
                .service__hero-detail-value от 4 лет
                .service__hero-detail-label Возраст
              .service__hero-detail 
                .service__hero-detail-value 17
                .service__hero-detail-label метров
              .service__hero-detail 
                .service__hero-detail-value 120
                .service__hero-detail-label трасс
      .service__inner
        .service__content
          .sv-block 
            .sv-block__content 
              .sv-desc Мы готовим спортсменов побеждать и брать любые высоты, не забывая о безопасности и с большим вниманием к здоровью будущих чемпионов. 
              .sv-tags  
                .sv-tags__item 2-х часовые тренировки
                .sv-tags__item Профессиональные тренеры
                .sv-tags__item Небольшие группы до 15 человек
                .sv-tags__item Карта клиента в подарок
                .sv-tags__item Комфортные раздевалки с сауной
                .sv-tags__item Кафе и зона отдыха
          .sv-block 
            .sv-block__title О школе скалолазания Энергии Высоты
            .sv-block__content
              .sv-video 
                .videoplayer
                  video(src="" poster="./img/about/preview.png").videoplayer__frame
                  button(type="button").videoplayer__btn.btn-play
                    +svg(36, 36, 'play-arrow')
              .sv-desc 
                ul 
                  li Гимнастика и стретчинг для скалолазов
                  li Боулдер зал на 150 трасс;
                  li Трудность с нависанием, высота 17 метров, 120 трасс;
                  li Эталонная скорость с автоматическими страховками и уникальной системой "Умный эталон";
          .sv-block 
            .sv-block__content 
              .sv-advantages 
                .sv-advantages__item 
                  picture.sv-advantages__item-img 
                    img(src="./img/service/adv-01.png", alt="Яркая программа")
                  .sv-advantages__item-info 
                    .sv-advantages__item-title Регулярно обновляющиеся трассы
                .sv-advantages__item 
                  picture.sv-advantages__item-img 
                    img(src="./img/service/adv-01.png", alt="Яркая программа")
                  .sv-advantages__item-info 
                    .sv-advantages__item-title Квалифицированные тренеры и инструкторы
                .sv-advantages__item 
                  picture.sv-advantages__item-img 
                    img(src="./img/service/adv-01.png", alt="Яркая программа")
                  .sv-advantages__item-info 
                    .sv-advantages__item-title Автостраховки для тренировок без напарника
                .sv-advantages__item 
                  picture.sv-advantages__item-img 
                    img(src="./img/service/adv-01.png", alt="Яркая программа")
                  .sv-advantages__item-info 
                    .sv-advantages__item-title Для взрослых и детей от 4х лет
          .sv-block 
            .sv-block__title Возрастные группы
            .sv-block__content 
              .sv-desc 
                ul 
                  li 4-5 лет
                  li 6-7 лет
                  li 8-9 лет
                  li Взрослая группа
          .sv-block 
            .sv-block__title Тренировки сегодня
